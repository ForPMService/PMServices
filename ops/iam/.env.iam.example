# ═══════════════════════════════════════
# IAM Dev Environment
# Скопируй в .env.iam и поменяй пароли
# ═══════════════════════════════════════

# Edge
EDGE_HTTP_PORT=8090

# ── Images ──
POSTGRES_IMAGE=postgres:18
REDIS_IMAGE=redis:8-alpine
MAILPIT_IMAGE=axllent/mailpit:v1.28.0
KEYCLOAK_IMAGE=quay.io/keycloak/keycloak:26.4.7
KEYCLOAK_CONFIG_CLI_IMAGE=quay.io/adorsys/keycloak-config-cli:6.2.1-26.0.5

# ── Observability images ──
OTEL_COLLECTOR_IMAGE=otel/opentelemetry-collector-contrib:0.96.0
ELASTICSEARCH_IMAGE=docker.elastic.co/elasticsearch/elasticsearch:8.13.0
KIBANA_IMAGE=docker.elastic.co/kibana/kibana:8.13.0
PROMETHEUS_IMAGE=prom/prometheus:v2.51.0
GRAFANA_IMAGE=grafana/grafana:10.4.0

# ── IAM Postgres ──
IAM_PG_PORT=5442
IAM_PG_DB=iam
IAM_PG_USER=iam_app
IAM_PG_PASSWORD=iam_app_password

# ── Keycloak Postgres ──
KC_PG_PORT=5443
KC_PG_DB=keycloak
KC_PG_USER=kc_app
KC_PG_PASSWORD=kc_app_password

# ── Redis ──
REDIS_PORT=6380
REDIS_PASSWORD=redis_dev_password

# ── Mailpit ──
MAILPIT_WEB_PORT=8026
MAILPIT_SMTP_PORT=1026

# ── Keycloak admin ──
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_REALM=pmplatform

# ── Observability ports (dev UI) ──
GRAFANA_PORT=3000
KIBANA_PORT=5601
PROMETHEUS_PORT=9090
